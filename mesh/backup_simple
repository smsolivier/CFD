FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters .001; // convert to mm 

Nx 20; 
Ny 20; 
Nz 10; 

vertices
(
    (0 -25 0) // 0
    (600 -25 0) // 1 
    (600 0 0) // 2 
    (600 25 0) // 3
    (0 25 0) // 4 
    (0 0 0) // 5

    (0 -25 25) // 6
    (600 -25 25) // 7 
    (600 0 25) // 8 
    (600 25 25) // 9 
    (0 25 25) // 10 
    (0 0 25) // 11 
);

blocks
(
    // lower inlet 
    hex (0 1 2 5 6 7 8 11) ($Nx $Ny $Nz) simpleGrading (10 .1 10) 
    // upper inlet 
    hex (5 2 3 4 11 8 9 10) ($Nx $Ny $Nz) simpleGrading (10 10 10)
    // hex (0 1 8 9 4 5 10 11) ($Nx $Ny $Nz) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    topInlet
    {
        type patch; 
        faces
        (
            (4 5 10 11)
        );
    }

    bottomInlet 
    {
    	type patch; 
    	faces
    	(
            (0 5 6 11)
    	);
    }

    outlet
    {
        type patch; 
        faces
        (
            (1 2 7 8)
            (2 3 8 9)
        ); 
    }

    walls
    {
        type wall; 
        faces
        (	
            (0 1 2 5)
            (2 3 4 5)
            (3 4 9 10)
            (0 1 6 7)
        ); 
    }

    reflecting
    {
        type patch; 
        faces 
        (
            (6 7 8 11)
            (8 9 10 11)
        );
    }
);

mergePatchPairs
(
);

